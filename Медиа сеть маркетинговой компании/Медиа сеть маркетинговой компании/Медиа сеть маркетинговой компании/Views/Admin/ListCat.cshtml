@model List<Медиа_сеть_маркетинговой_компании.Models.Cat>
@{
    ViewBag.Title = "Список категорий";
    Layout = "~/Views/Shared/_LayoutRooms.cshtml";
    ViewBag.Section_Title = "Категории";
    ViewBag.Title = "Административная панель, категории";
}
        <article class="module width_3_quarter">
            <header>
                <h3 class="tabs_involved">Списсок категорий</h3>
                <ul class="tabs">
                    <li><a href="#tab1">Категории</a></li>
                </ul>
            </header>

            <div class="tab_container">
                <div id="tab1" class="tab_content">
                    <table class="tablesorter" cellspacing="0">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Имя</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Медиа_сеть_маркетинговой_компании.Models.Cat m in Model)
                            {
                            <tr>
                                <td>@m.id</td>
                                <td>@m.Name</td>
                                <td><a href="../Admin/DelCat/@m.id"><input type="image" src="~/Content/mediaadmin/images/icn_trash.png" title="Trash"></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- end of #tab1 -->
            </div><!-- end of .tab_container -->

        </article><!-- end of content manager article -->